<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>NOIR.Infrastructure</RootNamespace>
        <AssemblyName>NOIR.Infrastructure</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="NOIR.Application.UnitTests" />
        <InternalsVisibleTo Include="NOIR.IntegrationTests" />
    </ItemGroup>

    <ItemGroup>
        <!-- Database -->
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="10.0.2" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="10.0.2" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="10.0.2">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>

        <!-- Bulk Operations (High Performance) -->
        <!-- Uses SqlBulkCopy for SQL Server - 10-15x faster than AddRange for large datasets -->
        <!-- MIT-licensed fork with EF Core 10 support: https://github.com/borisdj/EFCore.BulkExtensions -->
        <!-- Note: This package brings Pomelo.EntityFrameworkCore.MySql as transitive dependency (not used) -->
        <!-- NU1608 warning is suppressed in Directory.Build.props -->
        <PackageReference Include="EFCore.BulkExtensions.MIT" Version="10.22.0" />

        <!-- Authentication -->
        <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="10.0.2" />

        <!-- Multi-Tenancy -->
        <PackageReference Include="Finbuckle.MultiTenant.AspNetCore" Version="10.0.2" />
        <PackageReference Include="Finbuckle.MultiTenant.EntityFrameworkCore" Version="10.0.2" />

        <!-- Background Jobs -->
        <PackageReference Include="Hangfire.AspNetCore" Version="1.8.22" />
        <PackageReference Include="Hangfire.SqlServer" Version="1.8.22" />

        <!-- File Storage -->
        <PackageReference Include="FluentStorage" Version="6.0.0" />
        <PackageReference Include="FluentStorage.AWS" Version="6.0.1" />
        <PackageReference Include="FluentStorage.Azure.Blobs" Version="6.0.0" />
        <!-- Override AWSSDK transitive dependencies to fix security vulnerability -->
        <PackageReference Include="AWSSDK.Core" Version="4.0.3.10" />
        <PackageReference Include="AWSSDK.S3" Version="4.0.17.3" />
        <PackageReference Include="AWSSDK.SecurityToken" Version="4.0.5.8" />

        <!-- Email -->
        <PackageReference Include="FluentEmail.Core" Version="3.0.2" />
        <PackageReference Include="FluentEmail.MailKit" Version="3.0.2" />
        <PackageReference Include="FluentEmail.Razor" Version="3.0.2" />
        <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="10.0.2" />

        <!-- Logging -->
        <PackageReference Include="Serilog.AspNetCore" Version="10.0.0" />
        <PackageReference Include="Serilog.Sinks.Console" Version="6.1.1" />
        <PackageReference Include="Serilog.Sinks.File" Version="7.0.0" />

        <!-- Dependency Injection Auto-Registration -->
        <PackageReference Include="Scrutor" Version="7.0.0" />

        <!-- JSON Diff for Audit Logging (RFC 6902 JSON Patch) -->
        <PackageReference Include="SystemTextJson.JsonDiffPatch" Version="2.0.0" />

        <!-- Password Hashing for OTP -->
        <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />

        <!-- Hybrid Caching (L1 in-memory + optional L2 distributed) -->
        <!-- FusionCache provides stampede protection, fail-safe, soft/hard timeouts -->
        <PackageReference Include="ZiggyCreatures.FusionCache" Version="2.5.0" />
        <PackageReference Include="ZiggyCreatures.FusionCache.Serialization.SystemTextJson" Version="2.5.0" />

        <!-- Image Processing -->
        <!-- ImageSharp for resize, crop, optimize. AVIF for modern format. ThumbHash for placeholders -->
        <PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
        <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.2.0" />
        <PackageReference Include="NeoSolve.ImageSharp.AVIF" Version="1.3.0" />
        <PackageReference Include="ThumbHash" Version="2.1.1" />

        <!-- Payment Gateways (Phase 7: International) -->
        <PackageReference Include="Stripe.net" Version="48.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\NOIR.Domain\NOIR.Domain.csproj" />
        <ProjectReference Include="..\NOIR.Application\NOIR.Application.csproj" />
    </ItemGroup>

</Project>
